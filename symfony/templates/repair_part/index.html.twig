{% extends 'base.html.twig' %}

{% block title %}RepairPart index{% endblock %}

{% block body %}
    <h1>RepairPart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PartId</th>
                <th>CarId</th>
                <th>UserId</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repair_part in repair_parts %}
            <tr>
                <td>{{ repair_part.id }}</td>
                <td>{{ repair_part.name }}</td>
                <td>{{ repair_part.partId }}</td>
                <td>{{ repair_part.carId }}</td>
                <td>{{ repair_part.userId }}</td>
                <td>{{ repair_part.price }}</td>
                <td>
                    <a href="{{ path('app_repair_part_show', {'id': repair_part.id}) }}">show</a>
                    <a href="{{ path('app_repair_part_edit', {'id': repair_part.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repair_part_new') }}">Create new</a>
{% endblock %}
